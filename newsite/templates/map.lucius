.map-wrapper {
    display: block;
}

#map {
    width: 100vw;
    max-width: 80ch;
    height: 80vh; 
    /* max-height: calc(80ch * 16 / 9); */
    margin-bottom: -1em;
    border: 1px solid var(--accent-dark);
}

.map {
    max-width: 70ch;
    padding: 1em;
}

@media all and (orientation: landscape) {
    #map {
        margin-bottom: 0;
    }
}
